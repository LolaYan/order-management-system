<form class="form" action="/orders" method="POST">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="newOrderClientName">Client Name</label>
      <input type="text" class="form-control" id="newOrderClientName" aria-describedby="emailHelp" placeholder="Enter client name">
    </div>
    <div class="form-group col-md-6">
      <label for="newOrderClientPhoneNumber">Client Phone Number</label>
      <input type="text" class="form-control" id="newOrderClientPhoneNumber" placeholder="Enter client phone number">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="newOrderClientAddress">Client Address</label>
      <input type="email" class="form-control" id="newOrderClientAddress" placeholder="Enter address">
    </div>
    <div class="form-group col-md-6">
      <label for="newOrderClientEmail">Client Email</label>
      <input type="email" class="form-control" id="newOrderClientEmail" aria-describedby="emailHelp" placeholder="Enter email">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
  </div>
  <div class="form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Check me out</label>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>